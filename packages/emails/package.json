{
  "name": "emails",
  "version": "0.0.18",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run build --watch",
    "preview": "email dev --dir src/emails",
    "export": "email export --dir src/emails",
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@react-email/components": "0.0.6",
    "@react-email/render": "^0.0.7",
    "@types/react": "^18.2.20",
    "quickcheck-shared": "workspace:*",
    "react": "^18.2.0",
    "react-email": "1.9.4",
    "remeda": "^1.24.1",
    "tailwind-merge": "^1.12.0",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "tsup": "^6.6.3",
    "typescript": "^5.1.6"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  }
}
