{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "outDir": "./build",
    "paths": {
      "~/*": ["./app/*"],
      "~qcs/*": ["../../packages/quickcheck-shared/src/*"],
