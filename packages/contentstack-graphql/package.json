{
  "name": "contentstack-graphql",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "concurrently \"pnpm run build -- --watch\" \"pnpm run codegen --watch\"",
    "build": "pnpm run clean && tsup src/index.ts --format esm,cjs --dts",
    "codegen": "graphql-codegen",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@apollo/client": "^3.7.11",
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.3.0",
    "@graphql-codegen/client-preset": "^3.0.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "concurrently": "^8.0.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  }
}
