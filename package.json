{
  "name": "accelerate_quick_check",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "sb:qc-shared": "turbo run sb --filter=quickcheck-shared",
    "dev:qc-shared": "turbo run dev --filter=quickcheck-shared",
    "preview:emails": "turbo run preview --filter=emails",
    "dev:qc": "turbo run dev --filter=quick-check...",
    "dev:live": "turbo run dev --filter=live-preview...",
    "build": "turbo run build --filter=!react-email-client",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^3.7.1",
    "@types/eslint": "^8.21.2",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "latest",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "rimraf": "^4.4.0",
    "turbo": "latest",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18"
  }
}
