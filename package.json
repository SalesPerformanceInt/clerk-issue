{
  "name": "accelerate_cms",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "sb:cms-ui": "turbo run sb --scope=accelerate-cms-ui",
    "sb:learner-ui": "turbo run sb --scope=accelerate-learner-ui",
    "dev:cms-ui": "turbo run dev --scope=accelerate-cms-ui",
    "dev:learner-ui": "turbo run dev --scope=accelerate-learner-ui",
    "dev:cms": "turbo run dev --scope=accelerate-cms-simple-app",
    "dev:live": "turbo run dev --scope=live-preview",
    "dev:qc": "turbo run dev --scope=quick-check",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^3.7.1",
    "@types/eslint": "^8.21.2",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "latest",
    "prettier-plugin-tailwindcss": "^0.2.5",
    "rimraf": "^4.4.0",
    "turbo": "latest",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": "=18.7.0"
  }
}
